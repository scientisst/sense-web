{
	"compilerOptions": {
		"target": "es6",
		"outDir": "./dist",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": false,
		"incremental": true,
		"esModuleInterop": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"declaration": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts", "dist"]
}
